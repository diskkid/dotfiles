{
  "coc.preferences.formatOnSaveFiletypes": [
    "*"
  ],
  "coc.preferences.jumpCommand": "tab drop",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "clangd": {
      "command": "clangd",
      "args": [
        "--background-index"
      ],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ]
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": [
        "dockerfile"
      ],
      "args": [
        "--stdio"
      ]
    },
    "efm": {
      "command": "efm-langserver",
      "args": [],
      "filetypes": [
        "vim",
        "eruby",
        "markdown"
      ]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": [
        "haskell",
        "lhaskell"
      ]
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "list.insertMappings": {
    "<C-n>": "normal:j",
    "<C-p>": "normal:k"
  },
  "list.source.files.args": [
    "--hidden",
    "--files"
  ],
  "list.source.files.excludePatterns": [
    "**/.git/**"
  ]
}
